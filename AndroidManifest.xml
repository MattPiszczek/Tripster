<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tum.automotive.praktikum.master.ws2013.tripster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <!-- For google maps API -->
    <permission
        android:name="tum.automotive.praktikum.master.ws2013.tripster.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="tum.automotive.praktikum.master.ws2013.tripster.MAPS_RECEIVE" />

    <!-- For device resources -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- For google location API -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Open GL 2.0 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- For Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- For Google Maps API -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDrt4q04Rq6qLpBp_FIs7uSc4w-jrqM7tw" />

        <activity
            android:name="tum.automotive.praktikum.master.ws2013.tripster.MainSelectorActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tum.automotive.praktikum.master.ws2013.tripster.navi.menu.NavigateWithMapsAPIDevActivity"
            android:label="@string/title_activity_navigate_with_maps_apidev"
            android:parentActivityName="tum.automotive.praktikum.master.ws2013.tripster.MainSelectorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tum.automotive.praktikum.master.ws2013.tripster.MainSelectorActivity" />
        </activity>
        <activity
            android:name="tum.automotive.praktikum.master.ws2013.tripster.navi.far.NaviFarActivity"
            android:label="@string/title_activity_navigate"
            android:parentActivityName="tum.automotive.praktikum.master.ws2013.tripster.navi.menu.NavigateWithMapsAPIDevActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tum.automotive.praktikum.master.ws2013.tripster.navi.menu.NavigateWithMapsAPIDevActivity" />
        </activity>
    </application>

</manifest>
